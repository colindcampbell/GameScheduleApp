
<div id="new_team_modal">
	<div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	    <h4 class="modal-title" id="myModalLabel">( New Team ) <small> Add a team to <%= @league.name%></small></h4>
	</div>
	<div class="modal-body">
		
		<%= form_for([@league,@team], :html => {:class => 'form-horizontal', :role => 'form'}) do |f| %>
			<div class='form-group'>
				<label for="team-name" class='col-sm-3 control-label'>Team Name</label>
				<div class='col-sm-9'>
					<%= f.text_field :name, :class => 'form-control', :id => 'team-name', :placeholder => 'Name' %>
				</div>
			</div>
			<div class='form-group'>
				<label for="team-coach" class='col-sm-3 control-label'>Coach</label>
				<div class='col-sm-9'>
					<%= f.text_field :coach, :class => 'form-control', :id => 'team-coach', :placeholder => 'Coach' %>
				</div>
			</div>
			<div class='form-group'>
				<label for="home-city" class='col-sm-3 control-label'>Home City</label>
				<div class='col-sm-9'>
					<%= f.text_field :home_city, :class => 'form-control', :id => 'home-city', :placeholder => 'City' %>
				</div>
			</div>
			<div class='form-group'>
				<div class="col-sm-offset-2 col-sm-10">
					<right><%= f.submit "Submit", :class => 'btn btn-info' %>
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button></right>
				</div>
			</div>
		<% end %>
		
	</div>
	
	
</div>


