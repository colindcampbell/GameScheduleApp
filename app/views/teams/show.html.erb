<div id="view_team_modal">
	<div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	    <h4 class="modal-title" id="myModalLabel">( <%= @team.name %> ) <small><%= @team.home_city %></small></h4>
	</div>
	<div class="modal-body">
		
		<div class='container-fluid'>
			<div class="row">
				<div class='col-xs-6'><h4 style="text-align:right">Coach:</h4></div>
				<div class='col-xs-6'><h4><%= @team.coach %></h4></div>
			</div>
			<div class="row">
				<div class='col-xs-6'><h4 style="text-align:right">Home City:</h4></div>
				<div class='col-xs-6'><h4><%= @team.home_city %></h4></div>
			</div>
			
			<br>
			<div class="row">
				<div class="col-12" style="float:right">
					<% if current_user && current_user.id == @team.league.user_id %>
						<button type="button" class="btn btn-group btn-info" data-dismiss="modal" style="width:26%">Edit</button>
						<%= link_to 'Delete', @team, method: :delete, class: 'btn btn-group btn-danger', style: 'width:35%', data: {confirm: "Are you sure you want to delete #{@team.name}"} %>
						<button type="button" class="btn btn-default" style="width:32%" data-dismiss="modal">Close</button>
					<% else %>
						<button type="button" class="btn btn-group btn-default" style="width:100%" data-dismiss="modal">Close</button>
					<% end %>
					
				</div>
			</div>
		</div>

	</div>
</div>
