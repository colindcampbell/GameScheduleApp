

<div id="edit_game_modal">
	<div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	    <h4 class="modal-title" id="myModalLabel">( Edit Game ) <small> Edit Game or Add a Final Score </small></h4>
	</div>
	<div class="modal-body">

		<% if @game.errors.any? %>
		    <ul class="list-group">
		      <% @game.errors.full_messages.each do |message| %>
		        <li class="list-group-item list-group-item-danger col-sm-offset-1"><%= message %></li>
		      <% end %>
		    </ul>
		  <% end %>
		
		<%= form_for([@league,@game], :html => {:class => 'form-horizontal', :role => 'form'}) do |f| %>
			<div class='form-group'>
				<label for="game-location" class='col-sm-2 control-label'>Location</label>
				<div class='col-sm-10'>
					<%= f.text_field :location, :class => 'form-control', :id => 'game-location', :placeholder => 'Location' %>
				</div>
			</div>
			<div class='form-group'>
				<label for="home-teams" class='col-sm-2 control-label'>Home Team</label>
				<div class='col-sm-10'>
					<%= collection_select :game, :home_team_id, @teams, :_id, :name, {}, {:class => 'form-control', :id => 'home-teams'} %>
					<%= f.number_field :home_score, :class => 'form-control', :placeholder => 'Home Score' %>
				</div>
			</div>
			<div class='form-group'>
				<label for="away-teams" class='col-sm-2 control-label'>Away Team</label>
				<div class='col-sm-10'>
					<%= collection_select :game, :away_team_id, @teams, :_id, :name, {}, {:class => 'form-control', :id => 'away-teams'} %>
					<%= f.number_field :away_score, :class => 'form-control', :placeholder => 'Away Score' %>
				</div>
			</div>
			<div class='form-group'>
				<label for="game-final" class='col-sm-2 control-label'>Score Final</label>
				<div class='col-sm-10'>
					<%= f.check_box :final, :class => 'form-control', :id => 'game-final' %>
				</div>
			</div>
			<div class='form-group'>
				<label for="game-time" class='col-sm-2 control-label'>Time</label>
				<div class='col-sm-10'>
					<%= f.time_field :time, :class => 'form-control', :id => 'game-time', :placeholder => 'Location' %>
				</div>
			</div>
			<div class='form-group'>
				<div class="col-sm-offset-2 col-sm-10">
					<% if @game.errors.any? %>
						<%= f.submit "Submit", :class => 'btn btn-info' %>
						<%= link_to "Back", league_path(id: @l.name.gsub(/ /,"-")), :class => 'btn btn-default' %>
					<% else %>
						<%= f.submit "Submit", :class => 'btn btn-info' %>
						<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					<% end %>
				</div>
			</div>
		<% end %>
		
	</div>
	
	
</div>


