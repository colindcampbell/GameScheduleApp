<div id="new_session_modal">
	<div class="modal-header col-sm-offset-3">
	    <h4 class="modal-title" id="myModalLabel">( Sign in ) <small style="color:white">Access your Leagues</small></h4>
	</div>
	<div class="modal-body">
		
		<%= form_for :session, :url => sessions_path, :html => {:class => 'form-horizontal', :role => 'form'} do |f| %>
			<div class='form-group'>
				<label for="user-email" class='col-sm-3 control-label'>Email</label>
				<div class='col-sm-6'>
					<%= f.text_field :email, :class => 'form-control', :id => 'user-email', :placeholder => 'Email' %>
				</div>
			</div>
			<div class='form-group'>
				<label for="user-password" class='col-sm-3 control-label'>Password</label>
				<div class='col-sm-6'>
					<%= f.password_field :password, :class => 'form-control', :id => 'user-password', :placeholder => 'Password' %>
				</div>
			</div>
			<div class='form-group'>
				<div class="col-sm-offset-3 col-sm-6">
					<%= f.submit "Sign in", :class => 'btn btn-info' %>
					
				</div>
			</div>
		<% end %>

	</div>
</div>