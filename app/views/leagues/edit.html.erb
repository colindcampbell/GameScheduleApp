
<div id="edit_league_modal">
	<div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	    <h4 class="modal-title" id="myModalLabel">( Edit League ) <small> Edit the Name, Dates and Locations of <%=@league.name%></small></h4>
	</div>
	<div class="modal-body">
		
		<%= form_for @league, :html => {:class => 'form-horizontal', :role => 'form'} do |l| %>
			<div class='form-group'>
				<label for="league-name" class='col-sm-3 control-label'>Name</label>
				<div class='col-sm-9'>
					<%= l.text_field :name, :class => 'form-control', :id => 'league-name', :placeholder => 'Name' %>
				</div>
			</div>
			<div class='form-group'>
				<label for="league-start" class='col-sm-3 control-label'>Start Date</label>
				<div class='col-sm-9'>
					<%= l.date_field :start_date, :class => 'form-control', :id => 'league-start'%>
				</div>
			</div>
			<div class='form-group'>
				<label for="league-end" class='col-sm-3 control-label'>End Date</label>
				<div class='col-sm-9'>
					<%= l.date_field :end_date, :class => 'form-control', :id => 'league-end'%>
				</div>
			</div>
			<div class='form-group'>
				<label for="league-locations" class='col-sm-3 control-label'>Locations</label>
				<div class='col-sm-9'>
					<%= l.text_field :locations, :class => 'form-control', :id => 'league-locations', :placeholder => 'Locations' %>
				</div>
			</div>
			<div class='form-group'>
				<div class="col-sm-offset-3 col-sm-9">
					<%= l.submit "Submit", :class => 'btn btn-info' %>
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				</div>
			</div>
		<% end %>
		
	</div>
</div>


	  