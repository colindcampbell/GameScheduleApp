


<div id="new_league_modal">
	<div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	    <h4 class="modal-title" id="myModalLabel">( New League ) <small> Set the Name, Dates and Locations of your new League</small></h4>
	</div>
	<div class="modal-body">
		
		<%= form_for @league, :html => {:class => 'form-horizontal', :role => 'form'} do |l| %>
			<div class='form-group'>
				<label for="league-name" class='col-sm-2 control-label'>Name</label>
				<div class='col-sm-10'>
					<%= l.text_field :name, :class => 'form-control', :id => 'league-name', :placeholder => 'Name' %>
				</div>
			</div>
			<div class='form-group'>
				<label for="league-dates" class='col-sm-2 control-label'>Dates</label>
				<div class='col-sm-10'>
					<%= l.text_field :dates, :class => 'form-control', :id => 'league-dates', :placeholder => 'Dates' %>
				</div>
			</div>
			<div class='form-group'>
				<label for="league-locations" class='col-sm-2 control-label'>Locations</label>
				<div class='col-sm-10'>
					<%= l.text_field :locations, :class => 'form-control', :id => 'league-locations', :placeholder => 'Locations' %>
				</div>
			</div>
			<div class='form-group'>
				<div class="col-sm-offset-2 col-sm-10">
					<%= l.submit "Submit", :class => 'btn btn-info' %>
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				</div>
			</div>
		<% end %>
		
	</div>
</div>

 
	  