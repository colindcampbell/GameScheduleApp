<div class="container-fluid">
	<div class="row">


		<div class="col-md-3">
			<% @leagues.each do |l| %>
					<h3><%= link_to l.name, league_path(l.id) %></h3>
			<% end %>
			<button data-toggle="modal" data-target="#leagueModal" data-remote="<%= new_league_path %> #new_league_modal" class="btn btn-default btn-block">+ League</button><br>
			<div class="modal fade" id="leagueModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			  <div class="modal-dialog">
			    <div class="modal-content">
			    </div>
			  </div>
			</div>
			<%= link_to 'Delete League', @league, method: :delete, data: {confirm: "Confirm Delete League"} %><br>
		</div>



		<div class="col-md-3">
			<h3>Upcoming Games</h3>

			<% @league.days.sort_by{|dt| dt.date}.each do |d| %>

				<% if d.date >= Date.today %>
					<div class="btn-group btn-group-justified">
						<div class="btn-group" style="width:66%">
							<button class="btn btn-info btn-lrg" data-toggle="collapse" data-target="#<%=d.date%>" >
								<%= d.date.strftime("%A, %b %d") %>
							</button>
						</div>
						<div class="btn-group" style="width:17%">
							<button data-toggle="modal" data-target="#dayEditModal" data-remote="<%= edit_day_path(d) %> #edit_day_modal" class="btn btn-default" ><span class="glyphicon glyphicon-edit"></span></button>
							<div class="modal fade" id="dayEditModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
							  <div class="modal-dialog modal-sm">
							    <div class="modal-content">
							    </div>
							  </div>
							</div>
						</div>
						<div class="btn-group" style="width:17%">
							<button class="btn btn-default col-sm-2">
								<a data-confirm="Are you sure?" data-method="delete" href="/days/<%= d.id %>" rel="nofollow">
									<span class="glyphicon glyphicon-remove"></span>
								</a>
							</button>
						</div>
					</div>

					<div id="<%=d.date%>" class="collapse out">
						<div class="list-group">

	  					<% d.games.each do |g| %>
								<a data-toggle="modal" data-target="#<%= g.id %>" data-remote="<%= edit_game_path(g) %> #edit_game_modal" class="btn btn-default btn-block list-group-item">
									<center><h4 class="list-group-item-heading"><%= g.time %> @ <%= g.location %></h4>
										<strong>(<%= g.home_score %>) <%= g.home_team.name %></strong>
										<br>-vs-<br>
										<strong>(<%= g.away_score %>) <%= g.away_team.name %></strong>
									</center>
								</a>
								<div class="modal fade" id="<%= g.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
								  <div class="modal-dialog">
								    <div class="modal-content">
								    </div>
								  </div>
								</div>
							<% end %>

							<a data-toggle="modal" data-target="#<%= d.id %>" data-remote="<%= new_league_game_path(:league_id => @league.id, :day_id => d.id) %> #new_game_modal" class="btn btn-default btn-block list-group-item">
									+ Game to <%= d.date.strftime("%A, %b %d") %>
							</a>
						</div>
						<div class="modal fade" id="<%= d.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
						  <div class="modal-dialog">
						    <div class="modal-content">
						    </div>
						  </div>
						</div>
					</div>
				<% end %>

			<% end %>

			<a data-toggle="modal" data-target="#dayModal" data-remote="<%= new_league_day_path(@league) %> #new_day_modal" class="btn btn-default btn-block">+ Day to <%=@league.name%></a>
			<div class="modal fade" id="dayModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			  <div class="modal-dialog modal-sm">
			    <div class="modal-content">
			    </div>
			  </div>
			</div>
		</div>



		<div class="col-md-3">
			<h3>Results</h3>

			<% @league.days.sort_by{|dt| dt.date}.each do |d| %>

				<% if d.date < Date.today %>
					<div class="btn-group btn-group-justified">
						<div class="btn-group" style="width:66%">
							<button class="btn btn-info btn-lrg" data-toggle="collapse" data-target="#<%=d.date%>" >
								<%= d.date.strftime("%A, %b %d") %>
							</button>
						</div>
						<div class="btn-group" style="width:17%">
							<button data-toggle="modal" data-target="#dayEditModal" data-remote="<%= edit_day_path(d) %> #edit_day_modal" class="btn btn-default" ><span class="glyphicon glyphicon-edit"></span></button>
							<div class="modal fade" id="dayEditModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
							  <div class="modal-dialog modal-sm">
							    <div class="modal-content">
							    </div>
							  </div>
							</div>
						</div>
						<div class="btn-group" style="width:17%">
							<button class="btn btn-default col-sm-2">
								<a data-confirm="Are you sure?" data-method="delete" href="/days/<%= d.id %>" rel="nofollow">
									<span class="glyphicon glyphicon-remove"></span>
								</a>
							</button>
						</div>
					</div>

					<div id="<%=d.date%>" class="collapse out">
						<div class="list-group">

	  					<% d.games.each do |g| %>
								<a data-toggle="modal" data-target="#<%= g.id %>" data-remote="<%= edit_game_path(g) %> #edit_game_modal" class="btn btn-default btn-block list-group-item">
									<center><h4 class="list-group-item-heading"><%= g.time %> @ <%= g.location %></h4>
										<strong>(<%= g.home_score %>) <%= g.home_team.name %></strong>
										<br>-vs-<br>
										<strong>(<%= g.away_score %>) <%= g.away_team.name %></strong>
									</center>
								</a>
								<div class="modal fade" id="<%= g.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
								  <div class="modal-dialog">
								    <div class="modal-content">
								    </div>
								  </div>
								</div>
							<% end %>

							<a data-toggle="modal" data-target="#<%= d.id %>" data-remote="<%= new_league_game_path(:league_id => @league.id, :day_id => d.id) %> #new_game_modal" class="btn btn-default btn-block list-group-item">
								+ Game to <%= d.date.strftime("%A, %b %d") %>
							</a>
						</div>
						<div class="modal fade" id="<%= d.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
						  <div class="modal-dialog">
						    <div class="modal-content">
						    </div>
						  </div>
						</div>
					</div>
				<% end %>
				
			<% end %>
		</div>
		


		<div class="col-md-3">
			<h3>Standings</h3>
			<% Team.sorted(@league.id).each do |t| %>
				<strong>(<%= t.wins %>)-(<%= t.losses %>)</strong> <%= t.name %><br>
			<% end %>
			<%= link_to '+ Team', new_league_team_path(@league) %>
		</div>
		
	</div>
</div>













