<div id="new_user_modal">
	<div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	    <h4 class="modal-title" id="myModalLabel">( New User ) <small>Run Leagues the Easy Way</small></h4>
	</div>
	<div class="modal-body">

		<% if @user.errors.any? %>
		    <ul class="list-group">
		      <% @user.errors.full_messages.each do |message| %>
		        <li class="list-group-item list-group-item-danger col-sm-offset-1"><%= message %></li>
		      <% end %>
		    </ul>
  		<% end %>
		
		<%= form_for @user, :html => {:class => 'form-horizontal', :role => 'form'} do |f| %>
			<div class='form-group'>
				<label for="user-name" class='col-sm-3 control-label'>Name</label>
				<div class='col-sm-9'>
					<%= f.text_field :name, :class => 'form-control', :id => 'user-name', :placeholder => 'Name' %>
				</div>
			</div>
			<div class='form-group'>
				<label for="user-email" class='col-sm-3 control-label'>Email</label>
				<div class='col-sm-9'>
					<%= f.text_field :email, :class => 'form-control', :id => 'user-email', :placeholder => 'Email' %>
				</div>
			</div>
			<div class='form-group'>
				<label for="user-password" class='col-sm-3 control-label'>Password</label>
				<div class='col-sm-9'>
					<%= f.password_field :password, :class => 'form-control', :id => 'user-password', :placeholder => 'Password' %>
				</div>
			</div>
			<div class='form-group'>
				<label for="user-password-confirm" class='col-sm-3 control-label'>Confirm</label>
				<div class='col-sm-9'>
					<%= f.password_field :password_confirmation, :class => 'form-control', :id => 'user-password-confirm', :placeholder => 'Confirm Password' %>
				</div>
			</div>
			<div class='form-group'>
				<div class="col-sm-offset-3 col-sm-9">
					<%= f.submit "Submit", :class => 'btn btn-info' %>
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				</div>
			</div>
		<% end %>

	</div>
</div>